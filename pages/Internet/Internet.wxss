/* pages/Internet/Internet.wxss */
page{
  background: #EEF0F6;
}
.bannerImg{
  width:750rpx;
  height:348rpx;
}
.bannerImg image{
  width:100%;
  height:348rpx;
}
.title{
  width:100%;
  height:108rpx;
  display: flex;
  justify-content: space-around;
  background: white;
  }
  .title text{
    position: relative;
    display: inline-block;
    width:150rpx;
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:500;
    line-height: 100rpx;
  }
  .titleChange{
    color: rgba(201,62,62,1);
  }
  .titleChange ::after{
    position: absolute;
    content: '';
    width:126rpx;
    height:6rpx;
    bottom: 15rpx;
    left: 0;
    background:rgba(201,62,62,1);
  }
  .msgList{
    width:699rpx;
    height:144rpx;
    background:rgba(255,255,255,1);
    padding: 25rpx;
    margin-top: 24rpx;
  }
  .msgList image{
    width:186rpx;
    height:140rpx;
    float: left;
    padding-left: 25rpx;
  }
  .msgList text{
    padding-top: 13rpx;
    padding-left: 15rpx;
    line-height: 36rpx;
    font-size:24rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(51,51,51,1);
    overflow: hidden;
  	text-overflow:ellipsis;
   	 display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:3;
  }